<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="654dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="5dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="30dp">

            <LinearLayout
                android:layout_width="968dp"
                android:layout_height="310dp"
                android:orientation="vertical">
            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="@string/topic"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25sp"
                android:textStyle="bold"
                android:fontFamily="@font/font"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="226dp" />


            <EditText
                android:id="@+id/sert_nationalID"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:paddingLeft="20dp"
                android:background="@drawable/seachborder"
                android:drawableLeft="@drawable/pic_seach"
                android:hint="เลขบัตรประชาชนผู้บริจาคโลหิต"
                android:inputType="number"
                android:textSize="14dp"
                tools:layout_editor_absoluteX="41dp"
                tools:layout_editor_absoluteY="284dp" />


            <Button
                android:id="@+id/btn_sert_nationalID"
                android:layout_width="284dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/addbtn_border"
                android:text="login"
                android:textColor="#ffff"
                android:textSize="20dp" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
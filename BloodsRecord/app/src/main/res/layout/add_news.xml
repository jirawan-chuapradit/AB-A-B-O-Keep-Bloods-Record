<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f6f6f6">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="50dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/font"
                android:text="เพิ่มข่าวประชาสัมพันธ์"
                android:textStyle="bold"
                android:textColor="#ff215D"
                android:scrollbarSize="20dp"
                android:textSize="40dp"
                android:gravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/font"
                android:text="ชื่อเรื่อง :"
                android:textSize="25dp" />

                <EditText
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/register_shape"
                    android:fontFamily="@font/font"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textCursorDrawable="@color/colorPrimary" />

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/font"
                android:text="วันที่ :"
                android:textSize="25dp" />/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="รายละเอียด :"
                android:fontFamily="@font/font"
                android:textSize="25dp"
                android:padding="10dp"
                android:textCursorDrawable="@color/colorPrimary" />

            <EditText
                android:singleLine="false"
                android:gravity="start"
                android:id="@+id/detail"
                android:layout_width="310dp"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/register_shape2"
                android:ems="10"
                android:inputType="text"
                android:isScrollContainer="true"
                android:layout_gravity="start"
                android:padding="10dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/font"
                android:textSize="25dp"
                android:text="Link :" />

            <EditText
                android:id="@+id/link"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/register_shape"
                android:layout_marginTop="10dp"
                android:hint="Link"
                android:inputType="text"
                android:padding="10dp"
                android:textCursorDrawable="@color/colorPrimary" />

            <Button
                android:id="@+id/cf_add_news"
                android:layout_width="284dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/addbtn_border"
                android:text="ยืนยัน"
                android:textColor="#ffff"
                android:textSize="20dp" />


        </LinearLayout>


    </ScrollView>





</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/sh_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="sh_title"
        android:textSize="20dp"
         />

    <TextView
        android:id="@+id/sh_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/sh_title"
        android:textSize="20dp"
        android:text="sh_date"
         />

    <TextView
        android:id="@+id/sh_detail"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:layout_below="@id/sh_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="sh_detail"
         />

    <TextView
        android:id="@+id/sh_link"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="sh_link"
        android:layout_below="@id/sh_detail"

        />

        <Button
            android:id="@+id/back_to_newsList"
            android:layout_width="100dp"
            android:layout_centerInParent="true"
            android:layout_height="50dp"
            android:layout_below="@id/sh_link"
            android:layout_marginTop="30sp"
            android:textColor="#ffff"
            android:gravity="center"
            android:background="@color/login"
            android:text="ย้อนกลับ"
          />
        <Button
            android:id="@+id/delete_news"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/back_to_newsList"
            android:layout_centerInParent="true"
            android:textColor="#ffff"
            android:layout_marginTop="30sp"
            android:gravity="center"
            android:background="@color/login"
            android:text="ลบ"
            />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
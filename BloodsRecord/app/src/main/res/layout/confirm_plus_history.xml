<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="เพิ่มข่าวสารประชาสัมพันธ์"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="#FF215D"
            android:fontFamily="@font/fc_active_regular"/>

        <TextView
            android:id="@+id/cf_amount"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="amount"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:background="@drawable/register_shape"/>

        <TextView
            android:id="@+id/cf_date"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/cf_amount"
            android:textSize="20dp"
            android:text="sh_date"
            android:layout_gravity="center"
            android:padding="10dp"
            android:background="@drawable/register_shape"/>

        <EditText
            android:id="@+id/place"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:layout_below="@id/cf_date"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="สถานที่บริจาค"
            android:layout_gravity="center"
            android:padding="10dp"
            android:background="@drawable/register_shape" />

        <EditText
            android:id="@+id/sign"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="ลงชื่อ"
            android:layout_below="@id/place"
            android:layout_gravity="center"
            android:padding="10dp"
            android:background="@drawable/register_shape" />

        <Button
            android:id="@+id/cf_plus_his"
            android:layout_below="@id/sign"
            android:gravity="center"
            android:text="เพิ่มรายการ"
            android:background="@drawable/addbtn_border"
            android:layout_width="258dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="#ffff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/back"
            android:layout_below="@id/cf_plus_his"
            android:gravity="center"
            android:text="กลับ"
            android:background="@drawable/addbtn_border"
            android:layout_width="258dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="#ffff"
            android:textSize="20dp" />

    </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
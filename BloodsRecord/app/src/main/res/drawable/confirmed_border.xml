<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <stroke android:width="1dip" android:color="#040505" />
            <gradient android:angle="-90" android:startColor="#ff512f" android:endColor="#dd2476" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <stroke android:width="1dip" android:color="#081210" />
            <gradient android:angle="90" android:startColor="#f0ff512f" android:endColor="#f0dd2476" />
        </shape>
    </item>

</selector>